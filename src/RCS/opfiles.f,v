      write(3,*)' In Nextfiles; lun1,lun2: ',lun1,lun2
      write(3,*)' In Nextfiles; nindx1,nindx2: ', nindx1,nindx2
      write(3,*)' In Nextfiles; nlist1,nlist2: ', nlist1,nlist2
