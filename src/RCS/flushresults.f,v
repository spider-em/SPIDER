1.1
log
@Initial revision
@
text
@d28 7
a34 16
C       NNAME     LENGTH OF FILENAMES IN CHARACTERS
        PARAMETER (NNAME=80)

        CHARACTER *(NNAME)    RESULT
        LOGICAL               OPENED

        INQUIRE(NDAT,NAME=RESULT,OPENED=OPENED)

        IF (OPENED) THEN
           CLOSE(NDAT)
           OPEN(NDAT,FILE=RESULT,STATUS='OLD',POSITION='APPEND',
     &          IOSTAT=IER)
	   IF (IER .NE. 0) THEN
              CALL ERRT(101,'UNABLE TO REOPEN RESULTS FILE',NDUM)
           ENDIF
        ENDIF
@
