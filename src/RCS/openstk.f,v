d106 3
a108 4
              IFORM  = ITYPE
	      CALL OPENFIL(BUF,FILN,LUN,
     &                     NSAM,NROW,NSLICE,NSTACK,IMUSED,DISP,NFT)
              IF (NFT .NE. 2) RETURN
d115 3
a117 4
	      CALL OPENFIL(BUF,FILN,LUN,
     &                  NSAMF,NROWF,NSLICEF,NSTACK,IMUSED,DISPF,NFT)
