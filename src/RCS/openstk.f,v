        IF (BUF(1)  .NE. BUFCHK(1)  .OR. BUF(2)  .NE. BUFCHK(2) .OR.  
     &      BUF(12) .NE. BUFCHK(12) .OR. BUF(13) .NE. BUFCHK(13) .OR.  
     &      BUF(22) .NE. BUFCHK(22)) THEN
            IF (ISERROR) THEN
