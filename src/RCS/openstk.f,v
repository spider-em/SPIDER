        DIMENSION      BUF(*),ZBUF(45)
a104 1
        CHARACTER *180 CLINE
d110 2
a113 3
C       USE THIS WITH LIB$SIGNAL ON VAX
C       INTEGER * 4    STATUS

d135 1
a135 4
           IF (IRTFLG .NE. 0) THEN
              CALL ERRT(100,'OPENFB',NE)
              RETURN
           ENDIF
