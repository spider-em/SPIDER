              IF (TOTMIN.GE.EAV .AND. TOTMIN.GT.TOTMIR) THEN
C                NON-MIRRORED POSITION IS BETTER
                 EAV    = TOTMIN
                 DLIST2 = IMI
                 DLIST4 = TOT

              ELSEIF (TOTMIR .GE. EAV)  THEN
C                MIRRORED POSITION IS BETTER
                 EAV    = TOTMIR
                 DLIST2 = -IMI
                 DLIST4 = TMT
