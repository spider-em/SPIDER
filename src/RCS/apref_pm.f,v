     &              DLIST(4,IT),DLIST(5,IT),DLIST(6,IT),IRTFLG)
                CALL REG_SET_NSEL(6,2,DLIST(7,IT),
     &              DLIST(8,IT),0.0 ,0.0, 0.0,IRTFLG)
d185 1
a185 3
                CALL SAVDN1(NDOC,OUTANG,DLIST(1,ITI-ITIT+1),NLIST,
     &                      NRUN,0)
                NRUN = 1
d190 1
