	PARAMETER (QUADPI = 3.141592653589793238462643383279502884197)
	PARAMETER (DGR_TO_RAD =   (QUADPI/180))
        INTEGER                   NUMR(3,NRING)
	DIMENSION                 ILIST(NIMA),ILIP(NIDI)
