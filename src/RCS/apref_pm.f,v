	REAL,    ALLOCATABLE, DIMENSION(:,:,:) :: EXPBUF
	REAL,    ALLOCATABLE, DIMENSION(:)     :: AVI,SIGI
	REAL,    ALLOCATABLE, DIMENSION(:)     :: CCLIST 
