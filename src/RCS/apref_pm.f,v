C       RINGWE RETURNS WR
        CALL  RINGWE(WR,NUMR,NRING,MAXRIN)
        IF (MODE .EQ. 'H')  THEN
            WR    = WR*0.5
            DIVAS = 180.0
        ELSE
            DIVAS = 360.0
        ENDIF

#ifdef SP_LIBFFT
	ALLOCATE(TT(MAXRIN+15),STAT=IRTFLG)
	IF (IRTFLG .NE. 0) THEN
           CALL  ERRT(46,'TT',MAXRIN+15)
           RETURN
        ENDIF
	CALL  DZFFT1DUI(MAXRIN,TT)
#else
	ALLOCATE(TT(1),STAT=IRTFLG)
	IF (IRTFLG .NE. 0) THEN
           CALL  ERRT(46,'TT',1)
           RETURN
        ENDIF
