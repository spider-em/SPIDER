d122 3
a124 5
C       FIND IF CURRENTLY SWAPPING BYTES
        ISSWABT = ISSWAB(99)

        IF (FCHAR(4:5)  == 'TO')      GOTO 1000

d132 1
a132 1
     &                       'MRC (CCP4) INPUT',.TRUE.,IRTFLG)
d138 9
a146 3
C	PARSE MRC HEADER	
	CALL GETHEDCCP4(FIXLENBUF,NX,NY,NZ,MODE,FMIN,FMAX,
     &                   AV,RMS,NSYMBT,ISSWABT,FLIP,MACHST,IRTFLG)
