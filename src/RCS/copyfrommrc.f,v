                   I1VALOUT(3)  = I1VALIN(4)
                   I1VALOUT(2)  = I1VALIN(1)
                   I1VALOUT(1)  = I1VALIN(2)
                   BUF(ILOCOUT) = R4VALOUT
                ELSE
                   BUF(ILOCOUT) = BUFIN(ILOCIN)
                ENDIF
d233 1
