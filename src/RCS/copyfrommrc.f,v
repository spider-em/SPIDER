        ! BOTLEFT IS USUAL MRC BOTTOM IN CURRENT FORMAT !!
        BOTLEFT = (NCHAR > 2 .AND. (INDEX(ANS(3:NCHAR),'Y')) > 0) 

        ISTACK  = 1
