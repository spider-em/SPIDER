      LOGICAL            :: ISOPEN

#ifdef USE_MPI
      LOGICAL            :: ONLYONE_RED,ONLYONE_WRT
      COMMON /COMM_MPI/ONLYONE_RED,ONLYONE_WRT
      include 'mpif.h'

      ICOMM  = MPI_COMM_WORLD
