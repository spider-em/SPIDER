       SUBROUTINE INTERP_FBS3(F1,F2,NX, NY, NZ,
     &                              NX2,NY2,NZ2,
     &                              NXLD)
d44 3
a46 3
       REAL              :: F1 (NXLD, NY, NZ)
       REAL              :: F2 (NX2, NY2, NZ2)
       REAL, ALLOCATABLE :: F0 (:,:,:)
d59 1
a59 1
       INTEGER           :: INV
