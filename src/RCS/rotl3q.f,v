         DOUBLE PRECISION                 :: DX,DY,DZ
         DOUBLE PRECISION QR(3),DX,DY,DZ
d64 4
a67 2
	PSI   = -RAD_TO_DGR*ATAN2(YD,XD)
	THETA =  RAD_TO_DGR*ATAN2(Z,SQRT(XD*XD+YD*YD))
