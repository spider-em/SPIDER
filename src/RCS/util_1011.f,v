               CALL REG_SET_NSEL(1,3,THETA,SHXI,SHYI,0.0,0.0,IRTFLG)
a279 4

         CASE DEFAULT
            CALL ERRT(46,'UNKNOWN CASE,PGM ERROR',IDUM)
            EXIT
