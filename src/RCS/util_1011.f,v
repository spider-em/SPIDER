      REAL                   :: THETA,SHXI,SHYI
d58 1
a58 1
      INTEGER                :: LOCAT,LOCAST,NIMGT
d62 3
a64 1
      INTEGER                :: LUNDOCT 
a71 1
      LOGICAL,PARAMETER      :: USERTSF   = .TRUE.
d73 2
d99 2
a100 8
      IF (NIMG <= 1) THEN
C        SINGLE IMAGE OPERATION 
         IMGNUM     = 0
         WANTDOCOUT = .FALSE.
      ELSE
C        HAVE MULTIPLE IMAGES, MAY WANT OUTPUT DOC FILE 
         WANTDOCOUT = .TRUE.
      ENDIF
a101 1
       
d117 2
a118 1
      IF (WANTDOCOUT) THEN
d120 2
a121 1
         LUNDOCT = LUNDOC
a130 14
         ELSE
C           WANT OUTPUT DOC FILE
            SELECT CASE(FCHAR(4:5))
              CASE ('RO')  !
                MSG = '       IMG#,       ROT.ANGLE,        SX,' //
     &                '      SY'

              CASE ('SYM') !
                MSG = '       IMG#,       ROT.ANGLE,        SX,' //
     &                '      SY'
                THETA = 0.0
 
            END SELECT
            CALL LUNDOCPUTCOM(LUNDOCT,MSG,IRTFLG)
a133 2
      NXLD = NX 
      IF (USERTSF) NXLD = NX + 2 - MOD(NX,2)
d135 34
a168 8
      ALLOCATE (BUF1(NXLD,NY),
     &          BUF2(NX,NY), 
     &          STAT=IRTFLG)
      IF (IRTFLG .NE. 0) THEN 
         MWANT = NXLD*NY + NX*NY 
         CALL ERRT(46,'UTIL8; BUF1..',MWANT)
         GOTO 9999
      ENDIF  
d170 2
d178 25
a202 2
C        READ INPUT IMAGE
         CALL READV(LUNIN,BUF1, NXLD,NY, NX,NY,1)
d204 1
a204 1
         SELECT CASE(FCHAR(4:6))
d206 2
a207 3
         CASE ('SYM') !  ------- SYM ------------------------------ 'SYM' 
            CALL CENT_SYMOBJ(BUF1, BUF2, NXLD,NX,NY, 
     &                       SHXI,SHYI, IRTFLG)
d209 4
a212 4
            IF (IMGNUM > 0) THEN
               IF (VERBOSE)  WRITE(NOUT,90)IMGNUM,THETA,SHXI,SHYI
90             FORMAT('  IMAGE:',I6,
     &                '  SHIFT:(',F9.3,',',F9.3,')')
d214 2
a215 10
               IF (WANTDOCOUT) THEN
                  DLIST(1) = IMGNUM
                  DLIST(2) = THETA
                  DLIST(3) = SHXI
                  DLIST(4) = SHYI
                  CALL LUNDOCWRTDAT(LUNDOC,IKEY,DLIST,4,IRTFLG)
               ENDIF
            ELSE 
               WRITE(NOUT,91) THETA,SHXI,SHYI 
91             FORMAT('  SHIFT:(',F9.3,',',F9.3,')')
d217 1
a217 3
C              FILL COMMAND LINE REGISTERS IF WANTED
               CALL REG_SET_NSEL(1,3,THETA,SHXI,SHYI,0.0,0.0,IRTFLG)
            ENDIF
d219 2
a220 1
         CASE ('ROD') !  ------- ROD ------------------------------ 'ROD' 
d223 1
d225 11
a235 1
     &                       THETA, SHXI,SHYI, IRTFLG)
d237 29
d267 1
a267 1
               IF (VERBOSE)  WRITE(NOUT,92)IMGNUM,THETA,SHXI,SHYI
a270 8

               IF (WANTDOCOUT) THEN
                  DLIST(1) = IMGNUM
                  DLIST(2) = THETA
                  DLIST(3) = SHXI
                  DLIST(4) = SHYI
                  CALL LUNDOCWRTDAT(LUNDOC,IKEY,DLIST,4,IRTFLG)
               ENDIF
d272 3
