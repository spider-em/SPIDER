d211 2
a212 3

       DO J= NY-NY*0.25,NY
          DO I=1, NX*0.25
d216 2
a217 3

       DO J= NY*0.75,NY
          DO I= NX*0.75, NX
a220 1

d226 20
a245 1
C       write(6,*), ' '
d247 1
