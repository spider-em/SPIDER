text
@d15 1
a16 1
C                                                                      *
d20 6
d31 1
a31 1
      SUBROUTINE MRCG3(P3D,CG)
d33 1
a33 10
C  INPUT:
C     NTPT= TOTAL NUMBER OF MARKERS
C     P3D(3,LS)= COORDS OF POINTS IN 3-D SPACE
C  OUTPUT:
C     CG - centers of gravity, just info
C
        PARAMETER (LV=300)
        PARAMETER (LS=100)
      COMMON /GENERAL/NTPT,CIR(2)
      DIMENSION   P3D(3,LS),CG(3)
d35 7
a41 8
C
c  go over x-y-z
	DO    J=1,3
	CG(J)=0.0
		DO  I=1,NTPT
	     	  CG(J)=CG(J)+P3D(J,I)
		ENDDO
	CG(J)=CG(J)/ntpt
@


