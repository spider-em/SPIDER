      SUBROUTINE ANGD(PHI1,THETA1,PSI1, X,Y,Z, IRTFLG)
d75 3
a77 7
      XT    = 0
      YT    = 0
      ZT    = 1

      X     = RM11 * XT + RM21 * YT + RM31 * ZT   
      Y     = RM12 * XT + RM22 * YT + RM32 * ZT   
      Z     = RM13 * XT + RM23 * YT + RM33 * ZT   
@
