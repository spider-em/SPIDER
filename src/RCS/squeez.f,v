           IF (NSAM + KSH + 1 .LE. NSAMO) 
     &	      BUF(2*NSAM+KSH+1)=BUF(NSAM)*(1.-EPS) + AV * EPS
           CALL WRTLIN(LUNO,BUF(NSAM+1),NSAMO,I)
	ENDDO
d92 2
